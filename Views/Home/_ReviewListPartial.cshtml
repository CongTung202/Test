@model List<NemeShop.Models.DanhGiaSanPhamDto>

@if (Model != null && Model.Any())
{
    foreach (var r in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h6>@r.TenKhachHang <small class="text-muted">(@r.NgayTao.ToString("dd/MM/yyyy"))</small></h6>
                <div>
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= r.SoSao)
                        {
                            <span class="text-warning">★</span>
                        }
                        else
                        {
                            <span class="text-muted">☆</span>
                        }
                    }
                </div>
                <p class="mt-2">@r.NoiDung</p>
            </div>
        </div>
    }
}
else
{
    <p class="text-muted">Chưa có đánh giá nào cho sản phẩm này.</p>
}

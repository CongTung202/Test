@using NemeShop.Models
@using Microsoft.AspNetCore.Http
@inject QuanLyTapHoaContext db

@{
    var maKhStr = Context.Session.GetString("MaKh");
    ViewData["Title"] = "Theo dõi hoá đơn";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Đơn hàng của tôi</h2>
        <a href="/" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>Tiếp tục mua sắm
        </a>
    </div>

    <div id="ordersList">
        @if (!string.IsNullOrEmpty(maKhStr) && int.TryParse(maKhStr, out int mk))
        {
            var list = db.HoaDons.Where(h => h.MaKh == mk).OrderByDescending(h => h.NgayLap).ToList();

            if (list.Any())
            {
                foreach (var o in list)
                {
                    <div class="order-card mb-4 border-0 shadow-sm rounded-3 overflow-hidden" data-id="@o.MaHd">
                        <div class="card-header bg-light py-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong class="me-3">Mã đơn: #@o.MaHd</strong>
                                    <span class="text-muted">@o.NgayLap.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                                <span class="order-status badge @(o.TrangThai == 1 ? "bg-success" : "bg-warning")">
                                    @(o.TrangThai == 1 ? "Đã xác nhận" : "Chờ xác nhận")
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-2">
                                        <strong>Tổng tiền:</strong>
                                        <span class="text-primary fw-bold">@String.Format("{0:N0} ₫", o.ThanhTien)</span>
                                    </div>
                                    <div class="mb-2">
                                        <strong>Phương thức thanh toán:</strong>
                                        <span>Thanh toán khi nhận hàng</span>
                                    </div>
                                </div>
                                <div class="col-md-6 text-md-end">
                                    <div class="d-flex flex-column">
                                        <button class="btn btn-outline-primary btn-sm mb-2 view-order-detail" data-id="@o.MaHd">
                                            <i class="bi bi-eye me-1"></i>Xem chi tiết
                                        </button>
                                        <button class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-chat me-1"></i>Liên hệ hỗ trợ
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-cart-x display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">Bạn chưa có đơn hàng nào</h4>
                    <p class="text-muted">Hãy mua sắm và trải nghiệm dịch vụ của chúng tôi</p>
                    <a href="/" class="btn btn-primary mt-3">
                        <i class="bi bi-bag me-2"></i>Mua sắm ngay
                    </a>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info text-center py-4">
                <i class="bi bi-info-circle display-4 d-block mb-3"></i>
                <h4>Bạn chưa đăng nhập</h4>
                <p class="mb-3">Vui lòng đăng nhập để xem lịch sử đơn hàng của bạn</p>
                <a href="/Account/Login" class="btn btn-primary me-2">Đăng nhập</a>
                <a href="/Account/Register" class="btn btn-outline-primary">Đăng ký</a>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .order-card {
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .order-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1) !important;
            }

        .order-status {
            font-size: 0.85rem;
            padding: 0.35rem 0.75rem;
            border-radius: 50px;
        }
    </style>
}

@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/site.app.js"></script>
    <script>
        OrdersPage.init({ hubUrl: '/realtime-hub' });

        // Xem chi tiết đơn hàng
        document.querySelectorAll('.view-order-detail').forEach(btn => {
            btn.addEventListener('click', function() {
                const orderId = this.dataset.id;
                Swal.fire({
                    title: 'Chi tiết đơn hàng #' + orderId,
                    text: 'Tính năng này đang được phát triển',
                    icon: 'info',
                    confirmButtonColor: '#ff6b35'
                });
            });
        });
    </script>
}
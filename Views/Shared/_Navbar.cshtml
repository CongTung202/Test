<nav class="navbar navbar-expand-lg main-navbar shadow-sm">
    <div class="container">
        <!-- Logo -->
        <a class="navbar-brand d-none d-lg-flex align-items-center me-4" asp-controller="Home" asp-action="Index">
            <img src="https://tungkysie05.id.vn/image/app_icon.png" alt="Logo NemeChuaShop" height="70" class="rounded">
        </a>

        <!-- Navbar toggler -->
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Search + Nav items -->
        <div class="collapse navbar-collapse" id="navbarMain">
            <!-- Search ở giữa -->
            <form class="d-flex my-3 my-lg-0 flex-grow-1 mx-lg-4" role="search" onsubmit="event.preventDefault(); searchProduct();">
                <div class="input-group search-container">
                    <input id="searchInput" class="form-control search-input" type="search" placeholder="Tìm sản phẩm...">
                    <button class="btn btn-orange search-btn" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>

            <!-- Giỏ hàng + Tài khoản -->
            <div class="d-flex align-items-center ms-lg-3">
                <a href="javascript:void(0)" class="btn btn-icon me-2" data-bs-toggle="offcanvas" data-bs-target="#cartOffcanvas">
                    <i class="bi bi-cart3"></i>
                    <span class="cart-badge" id="cartCount">0</span>
                </a>

                @if (!string.IsNullOrEmpty(Context.Session.GetString("MaKh")) || !string.IsNullOrEmpty(Context.Session.GetString("AdminId")))
                {
                    <div class="dropdown">
                        <a href="#" class="btn btn-icon dropdown-toggle" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><span class="dropdown-item-text">Xin chào, <strong>@Context.Session.GetString("HoTen")</strong></span></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Tài khoản</a></li>

                            @if (!string.IsNullOrEmpty(Context.Session.GetString("MaKh")))
                            {
                                <li><a class="dropdown-item" href="/Orders"><i class="bi bi-bag me-2"></i>Đơn hàng của tôi</a></li>
                            }

                            <li><a class="dropdown-item" href="#"><i class="bi bi-heart me-2"></i>Yêu thích</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/Account/Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="dropdown">
                        <a href="#" class="btn btn-icon dropdown-toggle" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Login"><i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập</a></li>
                            <li><a class="dropdown-item" href="/Account/Register"><i class="bi bi-person-plus me-2"></i>Đăng ký</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-heart me-2"></i>Yêu thích</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-clock-history me-2"></i>Lịch sử mua hàng</a></li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</nav>

<style>
    .main-navbar {
        background: rgba(255, 255, 255, 0.95) !important;
        backdrop-filter: blur(10px);
        padding: 0.5rem 0;
    }

    .search-container {
        max-width: 500px;
        margin: 0 auto;
    }

    .search-input {
        border-radius: 50px 0 0 50px;
        border: 2px solid #f0f0f0;
        padding: 0.6rem 1.2rem;
        transition: all 0.3s;
    }

        .search-input:focus {
            border-color: #ff6b35;
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
        }

    .search-btn {
        border-radius: 0 50px 50px 0;
        background: #ff6b35;
        border-color: #ff6b35;
        color: white;
        padding: 0.6rem 1rem;
    }

        .search-btn:hover {
            background: #f7931e;
            border-color: #f7931e;
        }

    .btn-icon {
        position: relative;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        color: #555;
        transition: all 0.3s;
    }

        .btn-icon:hover {
            background: #f8f9fa;
            color: #ff6b35;
        }

    .dropdown-menu {
        border: none;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        padding: 0.5rem;
    }

    .dropdown-item {
        border-radius: 8px;
        padding: 0.5rem 1rem;
        transition: all 0.2s;
    }

        .dropdown-item:hover {
            background-color: #fff4eb;
            color: #ff6b35;
        }

    .dropdown-item-text {
        color: #6c757d;
        font-size: 0.9rem;
    }

    @@media (max-width: 991.98px) {
        .search-container {
            max-width: 100%;
        }
    }
</style>
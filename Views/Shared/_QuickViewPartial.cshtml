@model NemeShop.Models.SanPham
<div class="row">
    <div class="col-md-6 text-center">
        <img src="@(Model.HinhAnh ?? "/images/placeholder.png")" alt="@Model.TenSp" style="max-width:100%; height:auto; border-radius:8px" />
    </div>
    <div class="col-md-6">
        <h3>@Model.TenSp</h3>
        <p class="h4 text-danger">@String.Format("{0:N0} ₫", Model.DonGia)</p>
        <p>@Model.MoTa</p>
        <div class="mb-3">
            <button class="btn btn-primary add-to-cart" data-id="@Model.MaSp">Thêm vào giỏ</button>
            <a href="/SanPhams/Details/@Model.MaSp" class="btn btn-outline-secondary ms-2">Xem chi tiết</a>
        </div>
        <div>
            <small class="text-muted">Loại: @Model.MaLoaiNavigation?.TenLoai</small>
        </div>
    </div>
</div>

@model NemeShop.Models.SanPham

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-danger text-white text-center">
                    <h4><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa sản phẩm</h4>
                </div>
                <div class="card-body p-4">
                    <p class="text-center text-muted mb-4">
                        Bạn có chắc chắn muốn xóa sản phẩm này không? Hành động này không thể hoàn tác.
                    </p>

                    <div class="row">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.HinhAnh))
                            {
                                <img src="@Model.HinhAnh" class="img-fluid rounded shadow-sm mb-3" alt="Ảnh sản phẩm" />
                            }
                            else
                            {
                                <img src="~/images/no-image.png" class="img-fluid rounded shadow-sm mb-3" alt="No Image" />
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4 fw-bold">Tên sản phẩm</dt>
                                <dd class="col-sm-8">@Model.TenSp</dd>

                                <dt class="col-sm-4 fw-bold">Mô tả</dt>
                                <dd class="col-sm-8">@Model.MoTa</dd>

                                <dt class="col-sm-4 fw-bold">Đơn giá</dt>
                                <dd class="col-sm-8 text-danger fw-bold">@String.Format("{0:N0} ₫", Model.DonGia)</dd>

                                <dt class="col-sm-4 fw-bold">Số lượng</dt>
                                <dd class="col-sm-8">@Model.SoLuong</dd>

                                <dt class="col-sm-4 fw-bold">Giảm giá</dt>
                                <dd class="col-sm-8">
                                    @if (Model.PhanTramGiam > 0)
                                    {
                                        <span class="badge bg-success">-@Model.PhanTramGiam %</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không</span>
                                    }
                                </dd>

                                <dt class="col-sm-4 fw-bold">Trạng thái</dt>
                                <dd class="col-sm-8">
                                    @if (Model.TrangThai)
                                    {
                                        <span class="badge bg-primary">Đang bán</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ngưng bán</span>
                                    }
                                </dd>

                                <dt class="col-sm-4 fw-bold">Loại sản phẩm</dt>
                                <dd class="col-sm-8">@Model.MaLoaiNavigation?.TenLoai</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="MaSp" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model NemeShop.Models.SanPham

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<h2>Chỉnh sửa sản phẩm</h2>

<form id="editForm" enctype="multipart/form-data">
    <!-- hidden ID -->
    <input type="hidden" asp-for="MaSp" name="MaSp" />

    <div class="form-group">
        <label asp-for="TenSp">Tên</label>
        <input asp-for="TenSp" name="TenSp" class="form-control" />
        <span asp-validation-for="TenSp" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MoTa">Mô Tả</label>
        <textarea asp-for="MoTa" name="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DonGia">Đơn Giá</label>
        <input asp-for="DonGia" name="DonGia" class="form-control" />
        <span asp-validation-for="DonGia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoLuong">Số Lượng</label>
        <input asp-for="SoLuong" name="SoLuong" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <!-- Ảnh hiện tại -->
    <div class="form-group">
        <label>Ảnh hiện tại</label><br />
        @if (!string.IsNullOrEmpty(Model.HinhAnh))
        {
            <img id="previewOld" src="@Model.HinhAnh" alt="Ảnh sản phẩm" width="150" class="mb-2 border p-1" />
        }
        else
        {
            <p>(Chưa có ảnh)</p>
        }
        <!-- giữ ảnh cũ để tránh mất -->
        <input type="hidden" name="HinhAnh" value="@Model.HinhAnh" />
    </div>

    <!-- Upload ảnh mới -->
    <div class="form-group">
        <label>Chọn ảnh mới (nếu có)</label>
        <input type="file" name="file" id="fileInput" class="form-control" accept="image/*" />
        <br />
        <img id="previewNew" src="#" alt="Preview ảnh mới" width="150" class="d-none border p-1" />
    </div>

    <div class="form-group">
        <label asp-for="MaLoai">Mã Loại</label>
        <select asp-for="MaLoai" name="MaLoai" class="form-control" asp-items="ViewBag.MaLoai"></select>
        <span asp-validation-for="MaLoai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhanTramGiam">Giảm %</label>
        <input asp-for="PhanTramGiam" name="PhanTramGiam" class="form-control" />
        <span asp-validation-for="PhanTramGiam" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input class="form-check-input" asp-for="TrangThai" name="TrangThai" />
        <label class="form-check-label" asp-for="TrangThai">Trạng Thái</label>
    </div>

    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu</button>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Preview ảnh mới khi chọn
        $("#fileInput").change(function () {
            var reader = new FileReader();
            reader.onload = function (e) {
                $("#previewNew").attr("src", e.target.result).removeClass("d-none");
            };
            if (this.files && this.files[0]) {
                reader.readAsDataURL(this.files[0]);
            }
        });

        // Submit bằng AJAX
        $("#editForm").submit(function (e) {
            e.preventDefault();

            var formData = new FormData(this); // tự động lấy tất cả input có name

            $.ajax({
                url: '@Url.Action("EditAjax", "SanPhams")',
                type: 'POST',
                data: formData,
                processData: false, // không convert về query string
                contentType: false, // để browser tự set multipart/form-data
                success: function (res) {
                    if (res.success) {
                        alert(res.message);
                        window.location.href = '@Url.Action("Index", "SanPhams")';
                    } else {
                        alert("❌ Lỗi: " + res.message);
                    }
                },
                error: function () {
                    alert("⚠ Có lỗi xảy ra khi gửi dữ liệu.");
                }
            });
        });
    </script>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

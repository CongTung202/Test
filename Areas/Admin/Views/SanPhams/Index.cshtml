@model IEnumerable<NemeShop.Models.SanPham>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm sản phẩm
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Tên</th>
                        <th>Mô Tả</th>
                        <th>Đơn Giá</th>
                        <th>Số Lượng</th>
                        <th>Hình Ảnh</th>
                        <th>Giảm %</th>
                        <th>Trạng Thái</th>
                        <th>Tên Loại</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.TenSp)</td>
                            <td>@Html.DisplayFor(m => item.MoTa)</td>
                            <td>@string.Format("{0:N0} ₫", item.DonGia)</td>
                            <td>@Html.DisplayFor(m => item.SoLuong)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.HinhAnh))
                                {
                                    <img src="@Url.Content(item.HinhAnh)" alt="Ảnh sản phẩm" class="img-thumbnail" style="width:120px; height:120px; object-fit:cover;" />
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có ảnh</span>
                                }
                            </td>
                            <td>
                                @if (item.PhanTramGiam > 0)
                                {
                                    <span class="badge bg-warning text-dark">-@item.PhanTramGiam %</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Không</span>
                                }
                            </td>
                            <td>
                                @if (item.TrangThai)
                                {
                                    <span class="badge bg-success">Còn hàng</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hết hàng</span>
                                }
                            </td>
                            <td>@item.MaLoaiNavigation?.TenLoai</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.MaSp" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.MaSp" class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MaSp" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

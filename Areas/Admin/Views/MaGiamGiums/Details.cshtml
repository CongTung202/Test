@model NemeShop.Models.MaGiamGium

@{
    ViewData["Title"] = "Chi tiết Mã Giảm Giá";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">
                <i class="bi bi-ticket-perforated"></i> @ViewData["Title"]
            </h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tên voucher</dt>
                <dd class="col-sm-9">@Model.TenVoucher</dd>

                <dt class="col-sm-3">Mô tả</dt>
                <dd class="col-sm-9">@Model.MoTa</dd>

                <dt class="col-sm-3">Phần trăm giảm</dt>
                <dd class="col-sm-9">
                    @if (Model.PhanTramGiam > 0)
                    {
                        <span class="badge bg-info">@Model.PhanTramGiam %</span>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </dd>

                <dt class="col-sm-3">Giảm trực tiếp</dt>
                <dd class="col-sm-9">
                    @((Model.GiamTienTrucTiep ?? 0m).ToString("N0")) đ
                </dd>

                <dt class="col-sm-3">Giá trị đơn tối thiểu</dt>
                <dd class="col-sm-9">
                    @((Model.GiaTriDonToiThieu ?? 0m).ToString("N0")) đ
                </dd>

                <dt class="col-sm-3">Số lượng</dt>
                <dd class="col-sm-9">@Model.SoLuong</dd>

                <dt class="col-sm-3">Đã sử dụng</dt>
                <dd class="col-sm-9">@Model.DaSuDung</dd>

                <dt class="col-sm-3">Ngày bắt đầu</dt>
                <dd class="col-sm-9">@Model.NgayBatDau.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Ngày kết thúc</dt>
                <dd class="col-sm-9">@Model.NgayKetThuc.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @if (Model.TrangThai)
                    {
                        <span class="badge bg-success">Đang hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Ngưng</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <a asp-action="Edit" asp-route-id="@Model.MaVoucher" class="btn btn-warning text-dark">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
        </div>
    </div>
</div>

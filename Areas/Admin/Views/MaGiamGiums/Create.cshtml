@model NemeShop.Models.MaGiamGium

@{
    ViewData["Title"] = "Tạo Mã Giảm Giá";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-ticket-perforated"></i> Tạo Mã Giảm Giá
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="MaVoucher" class="form-label"></label>
                    <input asp-for="MaVoucher" class="form-control" />
                    <span asp-validation-for="MaVoucher" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TenVoucher" class="form-label"></label>
                    <input asp-for="TenVoucher" class="form-control" />
                    <span asp-validation-for="TenVoucher" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MoTa" class="form-label"></label>
                    <textarea asp-for="MoTa" class="form-control"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PhanTramGiam" class="form-label"></label>
                        <input asp-for="PhanTramGiam" class="form-control" type="number" min="0" max="100" />
                        <span asp-validation-for="PhanTramGiam" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="GiamTienTrucTiep" class="form-label"></label>
                        <input asp-for="GiamTienTrucTiep" class="form-control" type="number" min="0" />
                        <span asp-validation-for="GiamTienTrucTiep" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="GiaTriDonToiThieu" class="form-label"></label>
                    <input asp-for="GiaTriDonToiThieu" class="form-control" type="number" min="0" />
                    <span asp-validation-for="GiaTriDonToiThieu" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NgayBatDau" class="form-label"></label>
                        <input asp-for="NgayBatDau" class="form-control" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                        <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="NgayKetThuc" class="form-label"></label>
                        <input asp-for="NgayKetThuc" class="form-control" type="datetime-local" />
                        <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                    </div>
                </div>

                <!-- Hidden field -->
                <input asp-for="DaSuDung" type="hidden" value="0" />
                <input asp-for="TrangThai" type="hidden" value="true" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Tạo mới
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model NemeShop.Models.MaGiamGium

@{
    ViewData["Title"] = "Chỉnh sửa Mã Giảm Giá";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">
                <i class="bi bi-pencil-square"></i> @ViewData["Title"]
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="MaVoucher" />

                <div class="mb-3">
                    <label asp-for="TenVoucher" class="form-label"></label>
                    <input asp-for="TenVoucher" class="form-control" />
                    <span asp-validation-for="TenVoucher" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MoTa" class="form-label"></label>
                    <textarea asp-for="MoTa" class="form-control"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="PhanTramGiam" class="form-label"></label>
                        <input asp-for="PhanTramGiam" class="form-control" type="number" min="0" max="100" />
                        <span asp-validation-for="PhanTramGiam" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="GiamTienTrucTiep" class="form-label"></label>
                        <input asp-for="GiamTienTrucTiep" class="form-control" type="number" min="0" />
                        <span asp-validation-for="GiamTienTrucTiep" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="GiaTriDonToiThieu" class="form-label"></label>
                        <input asp-for="GiaTriDonToiThieu" class="form-control" type="number" min="0" />
                        <span asp-validation-for="GiaTriDonToiThieu" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SoLuong" class="form-label"></label>
                        <input asp-for="SoLuong" class="form-control" type="number" min="0" />
                        <span asp-validation-for="SoLuong" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3" hidden>
                        <label asp-for="DaSuDung" class="form-label"></label>
                        <input asp-for="DaSuDung" class="form-control" readonly />
                        <span asp-validation-for="DaSuDung" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NgayBatDau" class="form-label"></label>
                        <input asp-for="NgayBatDau" class="form-control" type="datetime-local"
                               value="@(Model.NgayBatDau.ToString("yyyy-MM-ddTHH:mm"))" />
                        <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="NgayKetThuc" class="form-label"></label>
                        <input asp-for="NgayKetThuc" class="form-control" type="datetime-local"
                               value="@(Model.NgayKetThuc.ToString("yyyy-MM-ddTHH:mm"))" />
                        <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="TrangThai" />
                    <label class="form-check-label" asp-for="TrangThai"></label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

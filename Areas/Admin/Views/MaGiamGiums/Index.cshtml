@model IEnumerable<NemeShop.Models.MaGiamGium>

@{
    ViewData["Title"] = "Danh sách Mã Giảm Giá";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 text-primary">
            <i class="bi bi-ticket-perforated"></i> @ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
    </div>

    <div class="card shadow-lg rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Tên Voucher</th>
                        <th>Mô tả</th>
                        <th>Giảm Phần Trăm</th>
                        <th>GIảm Trực Tiếp</th>
                        <th>Tối Thiểu</th>
                        <th>Số Lượng</th>
                        <th>Đã Dùng</th>
                        <th>Bắt Đầu</th>
                        <th>Kết Thúc</th>
                        <th>Trạng Thái</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenVoucher</td>
                            <td>@item.MoTa</td>
                            <td>
                                @if (item.PhanTramGiam > 0)
                                {
                                    <span class="badge bg-info">@item.PhanTramGiam %</span>
                                }
                            </td>
                            <td>
                                @if (item.GiamTienTrucTiep > 0)
                                {
                                    <span class="badge bg-warning text-dark">
                                        @(item.GiamTienTrucTiep?.ToString("N0") ?? "0m") đ
                                    </span>
                                }
                        </td>

                        <td>
                            @((item.GiaTriDonToiThieu.HasValue)
                                                        ? $"{item.GiaTriDonToiThieu:N0} đ"
                                                        : "-")
                        </td>
                            <td>@item.SoLuong</td>
                            <td>@item.DaSuDung</td>
                            <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                            <td>@item.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (item.TrangThai == true)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Ngưng</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.MaVoucher" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.MaVoucher" class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MaVoucher" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

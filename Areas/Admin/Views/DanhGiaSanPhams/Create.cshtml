@model NemeShop.Models.DanhGiaSanPhamDto

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-star-half"></i> Tạo Đánh giá
            </h4>
        </div>
        <div class="card-body">
            <form id="createForm">
                <div class="mb-3">
                    <label asp-for="MaKh" class="form-label fw-bold"></label>
                    <select asp-for="MaKh" class="form-select" asp-items="ViewBag.MaKh" id="MaKh">
                        <option value="">-- Chọn khách hàng --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="MaSp" class="form-label fw-bold"></label>
                    <select asp-for="MaSp" class="form-select" asp-items="ViewBag.MaSp" id="MaSp">
                        <option value="">-- Chọn sản phẩm --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="SoSao" class="form-label fw-bold"></label>
                    <div id="starRating" class="d-flex gap-2 fs-3 text-warning">
                        <i class="bi bi-star" data-value="1"></i>
                        <i class="bi bi-star" data-value="2"></i>
                        <i class="bi bi-star" data-value="3"></i>
                        <i class="bi bi-star" data-value="4"></i>
                        <i class="bi bi-star" data-value="5"></i>
                    </div>
                    <input type="hidden" id="SoSao" name="SoSao" />
                </div>


                <div class="mb-3">
                    <label asp-for="NoiDung" class="form-label fw-bold"></label>
                    <textarea asp-for="NoiDung" class="form-control" rows="3" id="NoiDung"></textarea>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="LaYeuThich" id="LaYeuThich" />
                    <label class="form-check-label fw-bold" for="LaYeuThich">Đánh dấu yêu thích</label>
                </div>

                <div class="mb-3">
                    <label asp-for="TrangThai" class="form-label fw-bold"></label>
                    <select asp-for="TrangThai" class="form-select" id="TrangThai">
                        <option value="true">Hiển thị</option>
                        <option value="false">Ẩn</option>
                    </select>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // ⭐⭐ XỬ LÝ STAR RATING ⭐⭐
            $("#starRating i").on("mouseenter", function () {
                var hoverValue = $(this).data("value");

                // reset hết sao
                $("#starRating i").removeClass("bi-star-fill").addClass("bi-star");

                // highlight đến ngôi sao đang hover
                $("#starRating i").each(function () {
                    if ($(this).data("value") <= hoverValue) {
                        $(this).removeClass("bi-star").addClass("bi-star-fill");
                    }
                });
            });

            // Khi chuột rời khỏi dãy sao → quay về trạng thái đã chọn
            $("#starRating").on("mouseleave", function () {
                var rating = $("#SoSao").val() || 0;
                $("#starRating i").removeClass("bi-star-fill").addClass("bi-star");
                $("#starRating i").each(function () {
                    if ($(this).data("value") <= rating) {
                        $(this).removeClass("bi-star").addClass("bi-star-fill");
                    }
                });
            });

            // Click để chọn số sao
            $("#starRating i").on("click", function () {
                var rating = $(this).data("value");
                $("#SoSao").val(rating); // lưu vào input hidden
            });

            // ⭐⭐ XỬ LÝ SUBMIT FORM (AJAX) ⭐⭐
            $("#createForm").on("submit", function (e) {
                e.preventDefault();

                var formData = {
                    MaKh: parseInt($("#MaKh").val()) || null,
                    MaSp: parseInt($("#MaSp").val()) || null,
                    SoSao: parseInt($("#SoSao").val()) || null,
                    NoiDung: $("#NoiDung").val(),
                    LaYeuThich: $("#LaYeuThich").is(":checked"),
                    TrangThai: $("#TrangThai").val() === "true"
                };

                // Validate client
                if (!formData.MaKh || !formData.MaSp || !formData.SoSao) {
                    Swal.fire("Thiếu dữ liệu", "Vui lòng chọn khách hàng, sản phẩm và số sao!", "warning");
                    return;
                }

                $.ajax({
                    url: '@Url.Action("Create", "DanhGiaSanPhams")',
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(formData),
                    beforeSend: function () {
                        // disable nút Lưu để tránh double-click
                        $("#createForm button[type=submit]").prop("disabled", true);
                    },
                    success: function (res) {
                        if (res.success) {
                            Swal.fire("Thành công", res.message, "success").then(() => {
                                window.location.href = '@Url.Action("Index", "DanhGiaSanPhams")';
                            });
                        } else {
                            Swal.fire("Lỗi", res.message, "error");
                        }
                    },
                    error: function () {
                        Swal.fire("Lỗi", "Có lỗi xảy ra khi lưu dữ liệu!", "error");
                    },
                    complete: function () {
                        $("#createForm button[type=submit]").prop("disabled", false);
                    }
                });
            });
        });
    </script>
}

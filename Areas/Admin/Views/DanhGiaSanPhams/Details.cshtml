@model NemeShop.Models.DanhGiaSanPham

@{
    ViewData["Title"] = "Chi tiết đánh giá";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-chat-square-text"></i> Chi tiết đánh giá</h4>
            <span class="badge bg-light text-dark">Mã: @Model.MaDanhGia</span>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">
                    <i class="bi bi-star-fill text-warning"></i> Số sao
                </dt>
                <dd class="col-sm-9">
                    @for (int i = 0; i < Model.SoSao; i++)
                    {
                        <i class="bi bi-star-fill text-warning"></i>
                    }
                    @for (int i = Model.SoSao; i < 5; i++)
                    {
                        <i class="bi bi-star text-warning"></i>
                    }
                </dd>

                <dt class="col-sm-3 fw-bold">
                    <i class="bi bi-card-text"></i> Nội dung
                </dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.NoiDung)</dd>

                <dt class="col-sm-3 fw-bold">
                    <i class="bi bi-heart-fill text-danger"></i> Yêu thích
                </dt>
                <dd class="col-sm-9">
                    @if (Model.LaYeuThich)
                    {
                        <span class="badge bg-danger">Có</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Không</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-bold">
                    <i class="bi bi-calendar-event"></i> Ngày tạo
                </dt>
                <dd class="col-sm-9">@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3 fw-bold">
                    <i class="bi bi-check-circle"></i> Trạng thái
                </dt>
                <dd class="col-sm-9">
                    @if (Model.TrangThai)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Đã khóa</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-bold">
                    <i class="bi bi-person"></i> Khách hàng
                </dt>
                <dd class="col-sm-9">@Model.MaKhNavigation?.HoTen</dd>

                <dt class="col-sm-3 fw-bold">
                    <i class="bi bi-box-seam"></i> Sản phẩm
                </dt>
                <dd class="col-sm-9">@Model.MaSpNavigation?.TenSp</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.MaDanhGia" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

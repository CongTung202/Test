@model NemeShop.Models.DanhGiaSanPham

@{
    ViewData["Title"] = "Xóa đánh giá sản phẩm";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body p-4">
                    <h5 class="text-danger mb-3">Bạn có chắc chắn muốn xóa đánh giá này?</h5>

                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.SoSao)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.SoSao)</dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.NoiDung)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.NoiDung)</dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.LaYeuThich)</dt>
                        <dd class="col-sm-9">
                            @if (Model.LaYeuThich)
                            {
                                <span class="badge bg-success">Yêu thích</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Không</span>
                            }
                        </dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.NgayTao)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayTao)</dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.TrangThai)</dt>
                        <dd class="col-sm-9">
                            @if (Model.TrangThai)
                            {
                                <span class="badge bg-success">Ẩn</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Hiện</span>
                            }
                        </dd>

                        <dt class="col-sm-3 fw-bold">Khách hàng</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.MaKhNavigation.HoTen)</dd>

                        <dt class="col-sm-3 fw-bold">Sản phẩm</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.MaSpNavigation.TenSp)</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="MaDanhGia" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

@model NemeShop.Models.KhachHang

@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0"><i class="bi bi-person-badge"></i> @ViewData["Title"]</h2>
    </div>

    <div class="card shadow border-0 rounded-3">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.HoTen)</dt>
                <dd class="col-sm-9">@Model.HoTen</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.DienThoai)</dt>
                <dd class="col-sm-9">@Model.DienThoai</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.DiaChi)</dt>
                <dd class="col-sm-9">@Model.DiaChi</dd>

                <!-- Thêm mật khẩu -->
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.MatKhau)</dt>
                <dd class="col-sm-9">@Model.MatKhau</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.TrangThai)</dt>
                <dd class="col-sm-9">
                    @if (Model.TrangThai)
                    {
                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> Ngưng</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3 text-end">
        <a asp-action="Edit" asp-route-id="@Model.MaKh" class="btn btn-primary me-2">
            <i class="bi bi-pencil-square"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay về
        </a>
    </div>
</div>

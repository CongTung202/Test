@model NemeShop.Models.KhachHang

@{
    ViewData["Title"] = "Thêm khách hàng";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0"><i class="bi bi-person-plus"></i> @ViewData["Title"]</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
    </div>

    <div class="card shadow border-0 rounded-3">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="HoTen" class="form-label fw-bold"></label>
                    <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên..." />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập email..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DienThoai" class="form-label fw-bold"></label>
                    <input asp-for="DienThoai" class="form-control" placeholder="Nhập số điện thoại..." />
                    <span asp-validation-for="DienThoai" class="text-danger"></span>
                </div>

                <!-- Thêm mật khẩu -->
                <div class="mb-3">
                    <label asp-for="MatKhau" class="form-label fw-bold"></label>
                    <input asp-for="MatKhau" class="form-control" placeholder="Nhập mật khẩu..." type="text" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DiaChi" class="form-label fw-bold"></label>
                    <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ..." />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

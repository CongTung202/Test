@model NemeShop.Models.KhachHang

@{
    ViewData["Title"] = "Xóa khách hàng";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 text-danger">
            <i class="bi bi-trash"></i> @ViewData["Title"]
        </h2>
    </div>

    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>
            Bạn có chắc chắn muốn <strong>xóa</strong> khách hàng này?
        </div>
    </div>

    <div class="card shadow border-0 rounded-3 mb-3">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.HoTen)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HoTen)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.DienThoai)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DienThoai)</dd>

                <!-- Thêm mật khẩu -->
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.MatKhau)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MatKhau)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.DiaChi)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DiaChi)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.TrangThai)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TrangThai)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="text-end">
        <input type="hidden" asp-for="MaKh" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Xóa
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Quay về
        </a>
    </form>
</div>

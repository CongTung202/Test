@model IEnumerable<NemeShop.Models.KhachHang>

@{
    ViewData["Title"] = "Danh sách khách hàng";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">
            <i class="bi bi-people-fill"></i> @ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm khách hàng
        </a>
    </div>

    <div class="card shadow border-0 rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Họ Tên</th>
                        <th>Email</th>
                        <th>Điênj Thoại</th>
                        <th>Mật Khẩu</th>
                        <th>Địa Chỉ</th>
                        <th>Trạng Thái</th>
                        
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.HoTen</td>
                            <td>@item.Email</td>
                            <td>@item.DienThoai</td>
                            <td>@item.MatKhau</td>
                            <td>@item.DiaChi</td>
                            <td>
                                @if (item.TrangThai)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Ngưng</span>
                                }
                            </td>
                            
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.MaKh"
                                   class="btn btn-sm btn-primary me-1" title="Chỉnh sửa">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.MaKh"
                                   class="btn btn-sm btn-info text-white me-1" title="Chi tiết">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MaKh"
                                   class="btn btn-sm btn-danger" title="Xóa">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

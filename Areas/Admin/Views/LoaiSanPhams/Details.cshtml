@model NemeShop.Models.LoaiSanPham

@{
    ViewData["Title"] = "Chi tiết loại sản phẩm";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-eye"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body p-4">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Tên Loại</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TenLoai)</dd>

                        <dt class="col-sm-4 fw-bold">Mô Tả</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MoTa)</dd>

                        <dt class="col-sm-4 fw-bold">Trạng Thái</dt>
                        <dd class="col-sm-8">
                            @if (Model.TrangThai)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Ngưng</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model?.MaLoai" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

@model NemeShop.Models.LoaiSanPham

@{
    ViewData["Title"] = "Chỉnh sửa loại sản phẩm";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-info text-light">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="MaLoai" />

                        <!-- Tên loại -->
                        <div class="mb-3">
                            <label asp-for="TenLoai" class="form-label fw-bold">Tên Loại</label>
                            <input asp-for="TenLoai" class="form-control" placeholder="Nhập tên loại sản phẩm" />
                            <span asp-validation-for="TenLoai" class="text-danger"></span>
                        </div>

                        <!-- Mô tả -->
                        <div class="mb-3">
                            <label asp-for="MoTa" class="form-label fw-bold">Mô Tả</label>
                            <textarea asp-for="MoTa" class="form-control" rows="3" placeholder="Nhập mô tả..."></textarea>
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                        </div>

                        <!-- Trạng thái -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="TrangThai" />
                            <label class="form-check-label fw-bold" asp-for="TrangThai">Trạng Thái</label>
                        </div>

                        <!-- Nút hành động -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

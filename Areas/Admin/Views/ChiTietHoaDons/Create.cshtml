@model NemeShop.Models.ChiTietHoaDonDto

@{
    ViewData["Title"] = "Thêm mới Chi tiết Hóa đơn";
}

<h2>Thêm mới Chi tiết Hóa đơn</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="MaHd">Hóa đơn</label>
        <select asp-for="MaHd" class="form-control" asp-items="@(ViewData["MaHd"] as SelectList)">
            <option value="">-- Chọn hóa đơn --</option>
        </select>
        <span asp-validation-for="MaHd" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="MaSp">Sản phẩm</label>
        <select asp-for="MaSp" class="form-control" asp-items="@(ViewData["MaSp"] as SelectList)" id="MaSp">
            <option value="">-- Chọn sản phẩm --</option>
        </select>
        <span asp-validation-for="MaSp" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoLuong">Số lượng</label>
        <input asp-for="SoLuong" class="form-control" id="SoLuong" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Đơn giá</label>
        <input id="DonGia" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Thành tiền</label>
        <input id="ThanhTien" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <script>
        // Khi chọn sản phẩm -> gọi API lấy đơn giá
        $("#MaSp").change(function () {
            var spId = $(this).val();
            if (spId) {
                $.get("/SanPhams/GetDonGia", { id: spId }, function (data) {
                    $("#DonGia").val(data);
                    tinhThanhTien();
                });
            } else {
                $("#DonGia").val("");
                $("#ThanhTien").val("");
            }
        });

        // Khi thay đổi số lượng -> tính lại thành tiền
        $("#SoLuong").on("input", function () {
            tinhThanhTien();
        });

        // Hàm tính thành tiền
        function tinhThanhTien() {
            var sl = parseInt($("#SoLuong").val()) || 0;
            var gia = parseFloat($("#DonGia").val()) || 0;
            $("#ThanhTien").val(sl * gia);
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

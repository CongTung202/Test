@model NemeShop.Models.HoaDon

@{
    ViewData["Title"] = "Chi tiết Hóa đơn";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-receipt"></i> @ViewData["Title"]</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.MaHd" class="btn btn-primary me-2">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Ngày lập</dt>
                <dd class="col-sm-9">@Model.NgayLap.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Tổng tiền</dt>
                <dd class="col-sm-9">@String.Format("{0:N0} ₫", Model.TongTien)</dd>

                <dt class="col-sm-3">Tiền giảm giá</dt>
                <dd class="col-sm-9">@String.Format("{0:N0} ₫", Model.TienGiamGia)</dd>

                <dt class="col-sm-3">Thành tiền</dt>
                <dd class="col-sm-9 fw-bold text-danger">@String.Format("{0:N0} ₫", Model.ThanhTien)</dd>

                <dt class="col-sm-3">Địa chỉ giao hàng</dt>
                <dd class="col-sm-9">@Model.DiaChiGiaoHang</dd>

                <dt class="col-sm-3">SĐT giao hàng</dt>
                <dd class="col-sm-9">@Model.SdtgiaoHang</dd>

                <dt class="col-sm-3">Ghi chú</dt>
                <dd class="col-sm-9">@Model.GhiChu</dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @switch (Model.TrangThai)
                    {
                        case 0:
                            <span class="badge bg-warning text-dark">Chờ xử lý</span>
                            ;
                            break;
                        case 1:
                            <span class="badge bg-success">Đã thanh toán</span>
                            ;
                            break;
                        case 2:
                            <span class="badge bg-info">Đang giao hàng</span>
                            ;
                            break;
                        default:
                            <span class="badge bg-success">Đã giao thành công</span>
                            ;
                            break;
                    }
                </dd>

                <dt class="col-sm-3">Khách hàng</dt>
                <dd class="col-sm-9">@Model.MaKhNavigation?.HoTen</dd>

                <dt class="col-sm-3">Voucher</dt>
                <dd class="col-sm-9">@Model.MaVoucherNavigation?.MaVoucher</dd>
            </dl>
        </div>
    </div>
</div>

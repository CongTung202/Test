@model IEnumerable<NemeShop.Models.HoaDon>

@{
    ViewData["Title"] = "Danh sách Hóa đơn";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-receipt"></i> @ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Ngày Lập</th>
                        <th>Tổng</th>
                        <th>Giảm Giá</th>
                        <th>Thành Tiền</th>
                        <th>Địa Chỉ</th>
                        <th>Số Điện Thoại</th>
                        <th>Ghi Chú</th>
                        <th>Trạng Thái</th>
                        <th>Họ Tên</th>
                        <th>Voucher</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NgayLap)</td>
                            <td>@String.Format("{0:N0} ₫", item.TongTien)</td>
                            <td>@String.Format("{0:N0} ₫", item.TienGiamGia)</td>
                            <td>@String.Format("{0:N0} ₫", item.ThanhTien)</td>
                            <td>@Html.DisplayFor(modelItem => item.DiaChiGiaoHang)</td>
                            <td>@Html.DisplayFor(modelItem => item.SdtgiaoHang)</td>
                            <td>@Html.DisplayFor(modelItem => item.GhiChu)</td>
                            <td>
                                @switch (item.TrangThai)
                                {
                                    case 0:
                                        <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                        ;
                                        break;
                                    case 1:
                                        <span class="badge bg-success">Đã thanh toán</span>
                                        ;
                                        break;
                                    case 2:
                                        <span class="badge bg-info">Đang giao hàng</span>
                                        ;
                                        break;
                                    default:
                                        <span class="badge bg-success">Đã giao thành công</span>
                                        ;
                                        break;
                                }
                            </td>
                            <td>@item.MaKhNavigation?.HoTen</td>
                            <td>@item.MaVoucherNavigation?.MaVoucher</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.MaHd" class="btn btn-sm btn-primary me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.MaHd" class="btn btn-sm btn-info text-white me-1">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
